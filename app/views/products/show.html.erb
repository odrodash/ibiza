

<div class="container my-3">
	<div class="row">
	 <div class="col-md-5 offset-md-1">
		<%= image_tag "https://images.unsplash.com/photo-1562886371-4bd5aa480645?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60", alt: "alttext", class:"w-100" %>
		<div class="d-flex my-3 align-content">
			<img alt="" class="avatar mr-3" src="https://avatars2.githubusercontent.com/u/54744328?v=4">
			<p><%= current_user.name %></p>
		</div>
		<div class="card my-3">
			<div class="card-body">
			 <h5 class="card-title">Description</h5>
			 <p class="card-text"><%= @product.description %></p>
		 </div>
	 </div>
 </div>
 <div class="col-md-5">
	<h1 class="display-4"><%= @product.name%></h1>
	<p class="mt-1"><%= @product.category %></p>
	<div class="details">
	 <div class="d-flex">
		<h2 class="mr-3">$<%=@product.price %></h2>
		<%== '<i class="fas fa-star"></i>' * 2 %>
		<%== '<i class="far fa-star"></i>' * 3 %>
	</div>
</div>
<div>

 <form>
	<fieldset disabled>
	 <div class="form-group">
		 <%= simple_form_for(@product) do |p| %>
			<%= p.input :name %>
	    <%= p.input :description %>
	    <%= p.input :price  %>
	    <%= p.input :category%>
	 		<%= p.input :location %>

		 <div class="form-check">
			 <input class="form-check-input" type="checkbox" id="disabledFieldsetCheck">
			 <input class="form-check-input" type="checkbox" id="disabledFieldsetCheck" >
			 <label class="form-check-label" >
				Can't check this
			</label>
		</div>
		<%= p.submit class:"btn btn-primary btn-block" %>
		<% end %>
	</div>
</fieldset>
</form>
</div>
</div>
</div>
</div>


