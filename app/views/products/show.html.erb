<div class="container my-3">
  <div class="row">
    <div class="col-md-5 offset-md-1">
      <%= cl_image_tag @product.photo, alt: "alttext", class:"w-100" %>
      <div class="d-flex my-3 align-content">
        <img alt="" class="avatar mr-3" src="https://avatars2.githubusercontent.com/u/54744328?v=4" width="40" height="40">
        <p><%= current_user.name %></p>
      </div>
      <div class="card my-3">
        <div class="card-body">
          <h5 class="card-title">Description</h5>
          <p class="card-text"><%= @product.description %></p>
        </div>
      </div>
    </div>
    <div class="col-md-5">
      <h1 class="display-4"><%= @product.name%></h1>
      <p class="mt-1"><%= @product.category %></p>
      <div class="details">
        <div class="d-flex">
          <h2 class="mr-3">$<%=@product.price %></h2>
          <%== '<i class="fas fa-star"></i>' * 2 %>
          <%== '<i class="far fa-star"></i>' * 3 %>
        </div>
      </div>
      <div>
          <%#= simple_form_for :search, url: root_path, method: "GET", html: { class: 'form-inline' } do |f| %>
          <%= simple_form_for new_product_booking_path(@product) do |f| %>
            <%= f.input :start, as: :string, required: false, input_html: {id: "range_start"} %>
            <%#= f.submit class:"btn btn-primary btn-block" %>
          <% end %>
          <%= link_to new_product_booking_path(@product) do |f|  %>
          <button type="button" class="btn btn-primary">Booking</button>
          <% end %>
          <%= link_to 'Edit Product', edit_product_path  %>
      </div>
    </div>
  </div>
</div>
