<div class="container my-3">
	<div class="row">
	 <div class="col-md-5 offset-md-1">
		<%= cl_image_tag @product.photo, alt: "alttext", class:"w-100" %>
		<div class="d-flex my-3 align-content">
			<img alt="" class="avatar mr-3" src="https://avatars2.githubusercontent.com/u/54744328?v=4" width="40" height="40">
      <p><%= @product.user.name %></p>
		</div>
		<div class="card my-3">
			<div class="card-body">
			 <h5 class="card-title">Description</h5>
			 <p class="card-text"><%= @product.description %></p>
		 </div>
	 </div>
 </div>
 <div class="col-md-5">
	<h1 class="display-4"><%= @product.name%></h1>
	<p class="mt-1"><%= @product.category %></p>
	<div class="details">
	 <div class="d-flex">
		<h2 class="mr-3">$<%=@product.price %></h2>
		<%== '<i class="fas fa-star"></i>' * 2 %>
		<%== '<i class="far fa-star"></i>' * 3 %>
	</div>
  <div>
    <% if user_signed_in? %>
      <% if policy(@product).edit? %>
       <%= link_to "edit", edit_product_path(@product), class:"btn btn-primary" %>
      <% end %>
    <% end %>
    </div>
</div>
