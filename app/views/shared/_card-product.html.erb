<% if 0 < product.average_rating && product.average_rating < 3 %>
  <div class="card-product2 border border-danger">
<% elsif product.average_rating > 3 && product.average_rating < 5  %>
  <div class="card-product2 border border-success">
    <% else %>
  <div class="card-product2 border border-success">
<% end %>
  <%= cl_image_tag product.photo %>
  <div class="card-product-infos">
    <h1 id="title"><%= truncate(product.name, :length => 25) %></h1>
      <div class="d-flex" id="price-category">
        <p id="price"><span> $ <%= product.price %></span></p>
        <p><%= product.category %></p>
      </div>
      <p id="subtitle"><%= truncate(product.description, :length => 75) %></p>
  </div>
</div>

