<% if product.average_rating < 3 %>
  <div class="cards border border-danger">
<% elsif product.average_rating > 3%>
  <div class="cards border border-success">
    <% else %>
  <div class="cards border border-success">
<% end %>
  <%= cl_image_tag product.photo %>
  <div class="card-content">
    <div class="d-flex justify-content-between">
      <div>
        <h2 id="title"><%= product.name %></h2>
        <p id="category"><%= product.category %></p>
      </div>
      <div id="price">
        <span>$ <%= product.price %></span>
      </div>
    </div>
      <p><%= product.description %></p>
      <p><%= product.average_rating %></p>
    </div>
  </div>

