<div class="container text-center">
  <h3 class="f my-4">Do you want to rent this <strong><%= @product.name %></strong>?</h3>
  <div class="my-3">
    <%= cl_image_tag(@product.photo, width: 400, height: 400, crop: :thumb)  %>
  </div>
  <pOwner <%= @product.user.name %></p>
  <p >Category: <%= @product.category %></p>
  <%= link_to  'Confirm Booking', product_bookings_path(@product), method: :post, class: 'btn btn-primary' %>
</div>

